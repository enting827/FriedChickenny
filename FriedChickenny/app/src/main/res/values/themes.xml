<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FriedChickenny" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FriedChickenny" parent="Base.Theme.FriedChickenny">
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subBtnStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">Subtract Button</item>
        <item name="android:src">@drawable/iconsub</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="addBtnStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">Add Button</item>
        <item name="android:src">@drawable/iconadd</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="subTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/orange</item>
    </style>

</resources>
